    <!-- Chef's Specials Carousel -->
    <div class="container my-5">
        <h2 class="mb-4 text-center text-primary fw-bold">Uploaded by peoples</h2>
        <div class="recipe-carousel">
            <div class="recipe-track">
                <% if (dish && dish.length > 0) { %>
                    <% dish.forEach(recipe=> { %>
                        <div class="recipe-card card border-0 rounded-4 overflow-hidden">
                            <img src="<%= (typeof recipe.imageUrl === 'string' && recipe.imageUrl.trim()) 
                                    ? recipe.imageUrl 
                                    : 'https://via.placeholder.com/400x300?text=No+Image' %>" alt="<%= recipe.title %>"
                                class="card-img-top object-fit-cover">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary fw-bold"><%= recipe.title %></h5>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-bookmark-heart-fill text-danger me-1"></i>
                                    <%= recipe.category %>
                                </p>

                                <% if (recipe.tags && recipe.tags.length > 0) { %>
                                    <div class="mb-3">
                                        <% recipe.tags.forEach(tag=> { %>
                                            <% if (tag.toLowerCase()==='veg' ) { %>
                                                <span class="badge badge-veg rounded-pill me-1"><%= tag %></span>
                                            <% } else if (tag.toLowerCase()==='nonveg' || tag.toLowerCase()==='non-veg' ) { %>
                                                <span class="badge badge-nonveg rounded-pill me-1"><%= tag %></span>
                                            <% } else { %>
                                                <span class="badge bg-secondary-subtle text-dark rounded-pill me-1"><%= tag %></span>
                                            <% } %>
                                        <% }) %>
                                    </div>
                                <% } %>

                                <% if (recipe.avgRating) { %>
                                    <div class="rating mb-2">
                                        <% for (let i=1; i <=5; i++) { %>
                                            <i class="bi <%= i <= Math.round(recipe.avgRating) ? 'bi-star-fill text-warning' : 'bi-star' %>"></i>
                                        <% } %>
                                        <small class="text-muted">(<%= recipe.avgRating.toFixed(1) %>/5)</small>
                                    </div>
                                <% } %>

                                <div class="mt-auto">
                                    <a href="/recipes/<%= recipe._id %>" class="btn btn-outline-primary w-100 view-recipe">View Recipe</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center text-muted fs-5">No recipes found.</p>
                <% } %>
            </div>
            <div class="show-more-arrow visible">
                <i class="bi bi-arrow-right-circle"></i>
            </div>
        </div>
    </div>

    <!-- 🔎 Search Results Section -->
    <div class="container my-5">
        <% if (meals && meals.length > 0) { %>
            <h3 class="mb-4">Search Results for "<%= query %>"</h3>
            <div class="row">
                <% meals.forEach(meal => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <img src="<%= meal.strMealThumb %>" class="card-img-top" alt="<%= meal.strMeal %>">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= meal.strMeal %></h5>
                                <p class="card-text"><%= meal.strCategory %> | <%= meal.strArea %></p>
                                <form action="/recipe/<%= meal.idMeal %>" method="get" class="mt-auto">
                                    <button type="submit" class="btn btn-primary w-100">View More</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else if (query) { %>
            <p class="text-center text-muted fs-5">No recipes found for "<%= query %>".</p>
        <% } %>
    </div>

