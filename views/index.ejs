<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Taste & Tell</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fonts & Styles -->
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="https://img.icons8.com/ios-filled/50/cutlery.png" type="image/x-icon">
    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-3 py-2">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="https://img.icons8.com/ios-filled/50/cutlery.png" width="30" height="30" class="me-2" alt="Logo">
            <span>Taste & Tell</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Recipes</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/recipes?category=trending">Trending</a></li>
                        <li><a class="dropdown-item" href="/recipes?category=veg">Veg</a></li>
                        <li><a class="dropdown-item" href="/recipes?category=non-veg">Non-Veg</a></li>
                        <li><a class="dropdown-item" href="/recipes?category=desserts">Desserts</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <form class="d-flex" action="/search" method="post">
                        <input class="form-control" type="search" name="searchTerm" placeholder="Search..." aria-label="Search">
                    </form>
                </li>
                <li class="nav-item">
                    <% if (username) { %>
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                style="width:36px;height:36px;font-weight:700;">
                                <%= username.charAt(0).toUpperCase() %>
                            </div>
                            <span class="ms-2 d-none d-md-inline">
                                <%= username %>
                            </span>
                            <a href="/logout" class="nav-link ms-3">Logout</a>
                        </div>
                        <% } else { %>
                            <a class="nav-link" href="/login">Login</a>
                            <% } %>
                </li>
            </ul>
        </div>
    </nav>

<% if (searchMode) { %>
  <div class="container my-5">
    <h3 class="mb-4">Search Results for "<%= query %>"</h3>

    <% if (meals && meals.length) { %>
      <div class="recipe-carousel">
        <div class="recipe-track">
          <% meals.forEach(recipe => { %>
            <div class="recipe-card card border-0 rounded-4 overflow-hidden">
              <img 
                src="<%= (typeof recipe.imageUrl === 'string' && recipe.imageUrl.trim()) 
                      ? recipe.imageUrl 
                      : 'https://via.placeholder.com/400x300?text=No+Image' %>"
                alt="<%= recipe.title %>"
                class="card-img-top object-fit-cover">

              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-primary fw-bold"><%= recipe.title %></h5>

                <p class="text-muted mb-2">
                  <i class="bi bi-bookmark-heart-fill text-danger me-1"></i>
                  <%= recipe.category %>
                </p>

                <% if (recipe.tags && recipe.tags.length > 0) { %>
                  <div class="mb-3">
                    <% recipe.tags.forEach(tag => { %>
                      <% if (tag.toLowerCase() === 'veg') { %>
                        <span class="badge badge-veg rounded-pill me-1"><%= tag %></span>
                      <% } else if (tag.toLowerCase() === 'nonveg' || tag.toLowerCase() === 'non-veg') { %>
                        <span class="badge badge-nonveg rounded-pill me-1"><%= tag %></span>
                      <% } else { %>
                        <span class="badge bg-secondary-subtle text-dark rounded-pill me-1"><%= tag %></span>
                      <% } %>
                    <% }) %>
                  </div>
                <% } %>

                <div class="mt-auto">
                  <a href="/recipe/<%= recipe._id %>" class="btn btn-outline-primary w-100">View Recipe</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        <div class="show-more-arrow visible">
          <i class="bi bi-arrow-right-circle"></i>
        </div>
      </div>
    <% } else { %>
      <p class="text-muted">No recipes found for "<%= query %>".</p>
    <% } %>
  </div>
<% } %>

